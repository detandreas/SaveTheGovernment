<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.MenuButton?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<VBox xmlns="http://javafx.com/javafx" 
      xmlns:fx="http://javafx.com/fxml" 
      fx:controller="budget.frontend.controller.GovMemberPendingChangesController"
      spacing="15.0" 
      styleClass="content-container"
      stylesheets="@../styles/main.css">

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <children>
            <Label text="Pending Changes" styleClass="page-title"/>

            <Region HBox.hgrow="ALWAYS" />

            <HBox alignment="CENTER_RIGHT" spacing="5.0">
                <children>
                    <MenuButton mnemonicParsing="false" styleClass="filter-button">
                        <graphic>
                            <ImageView fitHeight="18" fitWidth="18" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../images/filters_icon.png" />
                                </image>
                            </ImageView>
                        </graphic>
                        <items>
                            <MenuItem text="Sort by Difference Amount: Low to High" onAction="#handleSortAmountAsc" styleClass="filter-item" />
                            <MenuItem text="Sort by Difference Amount: High to Low" onAction="#handleSortAmountDesc" styleClass="filter-item" />

                            <SeparatorMenuItem />

                            <MenuItem text="Filter: Increases Only" onAction="#handleFilterIncreasesOnly" styleClass="filter-item" />
                            <MenuItem text="Filter: Decreases Only" onAction="#handleFilterDecreasesOnly" styleClass="filter-item" />

                            <SeparatorMenuItem />

                            <MenuItem text="Sort by User Name: A-Z" onAction="#handleSortByNameAsc" styleClass="filter-item" />
                            <MenuItem text="Sort by User Name: Z-A" onAction="#handleSortByNameDesc" styleClass="filter-item" />

                            <SeparatorMenuItem />

                            <MenuItem text="Clear Filters" onAction="#handleClearFilters" styleClass="filter-item" />
                        </items>
                    </MenuButton>
                </children>
            </HBox>

        </children>
    </HBox>

    <HBox alignment="CENTER_LEFT" spacing="10.0">
        <children>
            <Button fx:id="createNewRequestButton" onAction="#handleCreateNewRequest" text="Create New Request" styleClass="btn-approve" />
            <Button fx:id="myRequestsButton" onAction="#handleMyRequests" text="My Requests" />
        </children>
    </HBox>

    <TableView fx:id="pendingChangesTable" VBox.vgrow="ALWAYS">
        
        <columns>
            <TableColumn fx:id="dateColumn" text="Date &amp; Time" prefWidth="150"/>
            <TableColumn fx:id="actorColumn" text="User" prefWidth="150"/>
            <TableColumn fx:id="itemNameColumn" text="Item Name" prefWidth="150"/>
            <TableColumn fx:id="itemIdColumn" text="Item ID" prefWidth="80" styleClass="center-aligned-cell, center-header"/>
            <TableColumn fx:id="oldValueColumn" text="Old Value (€)" prefWidth="150" styleClass="center-aligned-cell, center-header"/>
            <TableColumn fx:id="newValueColumn" text="New Value (€)" prefWidth="150" styleClass="center-aligned-cell, center-header"/>
            <TableColumn fx:id="valueDifferenceColumn" text="Difference (€)" prefWidth="150" styleClass="center-aligned-cell, center-header"/>
        </columns>

        <columnResizePolicy>
            <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
        </columnResizePolicy>

        <placeholder>
            <Label text="All Pending Changes are resolved." styleClass="placeholder-label"/>
        </placeholder>
    </TableView>

</VBox>