<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox 
    alignment="CENTER"
    spacing="15"
    stylesheets="@../styles/main.css"
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="budget.frontend.controller.EditBudgetController">

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <Label fx:id="editBudgetLabel" style="-fx-padding: 0 0 10 0;" styleClass="header-label" text="Edit Budget Item" />

    <HBox alignment="CENTER_LEFT" maxWidth="400" spacing="10" styleClass="input-container">
        <TextField fx:id="newValueTextField" promptText="Enter new budget value (â‚¬):" styleClass="embedded-text-field" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="saveButton" text="Save" onAction="#handleSave" defaultButton="true" styleClass="btn-approve"/>
        <Button text="Cancel" onAction="#handleCancel" cancelButton="true"/>
    </HBox>
</VBox>