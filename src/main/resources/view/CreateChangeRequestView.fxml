<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox 
    alignment="CENTER"
    spacing="15"
    stylesheets="@../styles/main.css"
    xmlns="http://javafx.com/javafx"
    xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="budget.frontend.controller.CreateChangeRequestController">

    <fx:define>
        <ToggleGroup fx:id="percentGroup" />
    </fx:define>

    <padding>
        <Insets bottom="30" left="40" right="40" top="30" />
    </padding>

    <Label fx:id="createChangeRequestLabel" style="-fx-padding: 0 0 10 0;" styleClass="header-label" text="Create a Change Request" />

    <HBox alignment="CENTER_LEFT" maxWidth="400" spacing="10" styleClass="input-container">
        <ComboBox fx:id="budgetItemComboBox" maxWidth="Infinity" promptText="Select a budget item:" styleClass="embedded-text-field" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox alignment="CENTER_LEFT" maxWidth="400" spacing="10" styleClass="input-container">
        <TextField fx:id="oldValueTextField" promptText="Old Value:" editable="false" styleClass="embedded-text-field" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox alignment="CENTER_LEFT" maxWidth="400" spacing="10" styleClass="input-container">
        <TextField fx:id="newValueTextField" promptText="Enter the new value:" styleClass="embedded-text-field" HBox.hgrow="ALWAYS" />
    </HBox>

    <HBox alignment="CENTER" maxWidth="500" spacing="10">
        <RadioButton text="-3%" toggleGroup="$percentGroup" onAction="#handlePercentageClick" userData="-0.03"/>
        <RadioButton text="-2%" toggleGroup="$percentGroup" onAction="#handlePercentageClick" userData="-0.02"/>
        <RadioButton text="-1%" toggleGroup="$percentGroup" onAction="#handlePercentageClick" userData="-0.01"/>
        <RadioButton text="+1%" toggleGroup="$percentGroup" onAction="#handlePercentageClick" userData="0.01"/>
        <RadioButton text="+2%" toggleGroup="$percentGroup" onAction="#handlePercentageClick" userData="0.02"/>
        <RadioButton text="+3%" toggleGroup="$percentGroup" onAction="#handlePercentageClick" userData="0.03"/>
    </HBox>

    <HBox alignment="CENTER" spacing="20" style="-fx-padding: 20 0 0 0;">
        <Button fx:id="submitButton" text="Submit Request" onAction="#handleSubmitRequest" defaultButton="true" styleClass="btn-approve"/>
        <Button text="Cancel" onAction="#handleCancel" cancelButton="true"/>
    </HBox>
</VBox>